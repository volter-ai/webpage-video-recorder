{
  "name": "webpage-video-recorder",
  "version": "1.0.0",
  "description": "Automated webpage video screen recorder using Node.js, Puppeteer, Xvfb, ffmpeg, and PulseAudio",
  "type": "module",
  "bin": {
    "record": "./record.js"
  },
  "scripts": {
    "record": "node record.js",
    "docker:build": "docker build -t webpage-recorder .",
    "docker:run": "docker-compose up"
  },
  "keywords": [
    "screen-recorder",
    "video",
    "puppeteer",
    "xvfb",
    "ffmpeg",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^22.0.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
